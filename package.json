{
	"name": "kaaya",
	"description": "DataStore synchronization library",
	"license": "MIT",
	"version": "0.0.5",
	"main": "build/kaaya.js",
	"types": "build/declarations/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git@github.com:kefniark/Kaaya.git"
	},
	"bugs": {
		"url": "https://github.com/kefniark/Kaaya/issues"
	},
	"scripts": {
		"build": "run-s build:pre && run-p build:dist:* && run-p build:definition && run-s build:clean",
		"build:pre": "tsc && rimraf build",
		"build:dist:dev": "webpack --config=webpack.config.dev.js",
		"build:dist:prod": "webpack --config=webpack.config.prod.js",
		"build:definition": "tsc --p ./tsconfig.json --declaration true --emitDeclarationOnly true --outDir ./build/declarations",
		"build:clean": "rimraf lib && rimraf build/lib && rimraf build/declarations/tests",
		"coverage": "jest --coverage",
		"coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
		"dev": "webpack-dev-server --config webpack.config.dev.js",
		"prettier": "run-s prettier:**",
		"prettier:src": "prettier --config .prettierrc.yaml --write \"src/**/*.ts\"",
		"prettier:tests": "prettier --config .prettierrc.yaml --write \"tests/**/*.ts\"",
		"test": "run-s test:**",
		"test:unittest": "jest",
		"test:lint": "prettier --config .prettierrc.yaml --check \"src/**/*.ts\"",
		"test:depencencies": "npm-check --production || echo \"Run 'npm run update' to interactively update dependencies for this project\"",
		"update": "npm-check --update"
	},
	"author": {
		"name": "Kevin destrem",
		"email": "kef1@free.fr"
	},
	"devDependencies": {
		"@types/jest": "^24.0.20",
		"@types/nanoid": "^2.1.0",
		"@types/node": "^12.11.7",
		"copy-webpack-plugin": "^5.0.4",
		"coveralls": "^3.0.7",
		"jest": "^24.9.0",
		"npm-check": "^5.9.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.18.2",
		"replace-in-file": "^4.2.0",
		"rimraf": "^3.0.0",
		"ts-jest": "^24.1.0",
		"ts-loader": "^6.2.1",
		"typescript": "^3.6.4",
		"webpack": "^4.41.2",
		"webpack-auto-inject-version": "^1.2.2",
		"webpack-cli": "^3.3.9",
		"webpack-dev-server": "^3.9.0",
		"webpack-shell-plugin": "^0.5.0"
	},
	"dependencies": {
		"@types/yaml": "^1.2.0",
		"js-ini": "^1.1.2",
		"nanoid": "^2.1.6",
		"on-change": "^1.6.2",
		"ts-events": "^3.3.1",
		"yaml": "^1.7.2"
	}
}
